
{{#if userContext}}
<div style="background-color:#00559c;color:white;margin-bottom:50px;padding-top:10px;">
   <div class="container" >
      <div class="row">
         <div class="col-8">
            <h2 class="text-left">Hi {{greeting_name}}!</h2>
         </div>
         <div class="col-4"></div>
      </div>
   </div>
</div>
<div class="container" >
   <div class="row">
      <div class="col-7">
         <figure class="item">
            <img class="rounded img-fluid" style="max-width:100%;" src="{{index_img_url}}" />
            <figcaption class="caption"></figcaption>
         </figure>
      </div>
      <div class="col-5">
         <div>
            <div class="container">
              {{#if userContext.userinfo.given_name}}

               <div class="row">
                  <div class="col" style="font-size:12px;margin:0;height:1px;">
                     First Name
                  </div>
                  <div class="col" style="font-size:12px;">
                     Last Name
                  </div>
               </div>
               <div class="row">
                  <div class="col" style="font-size:42px;color:#00559c">
                     {{userContext.userinfo.given_name}}
                  </div>
                  <div class="col" style="font-size:42px;color:#00559c">
                     {{userContext.userinfo.family_name}}
                  </div>
               </div>
               {{/if}}
               <div class="row">
                  <div class="col-3">
                     <img src="https://cdn.glitch.com/bb25f7a0-0f2b-4f20-bdb3-8c401691d212%2Flogin.png?1552443444286" style="width:100%;" />
                  </div>
                  <div class="col-9">
                     <p style="margin:0;padding-top:15px;font-size:12px;margin-bottom:-8px;">
                        Login
                     </p>
                     <p style="margin:0;font-size:25px;"> 
                        {{userContext.userinfo.preferred_username}}
                     </p>
                  </div>
               </div>
               <div class="row">
                  <div class="col-3">
                     <img src="https://cdn.glitch.com/bb25f7a0-0f2b-4f20-bdb3-8c401691d212%2Femail.png?1552443369411" style="width:100%;" />
                  </div>
                  <div class="col-9">
                     <p style="margin:0;padding-top:15px;font-size:12px;margin-bottom:-8px;">
                        Email
                     </p>
                     <p style="margin:0;font-size:25px;"> 
                        {{userContext.userinfo.email}}
                     </p>
                  </div>
               </div>
               <div class="row">
                  <div class="col-3">
                     <img src="https://cdn.glitch.com/bb25f7a0-0f2b-4f20-bdb3-8c401691d212%2Finfo.png?1552443369452" style="width:100%;" />
                  </div>
                  <div class="col-9">
                     <p style="margin:0;padding-top:15px;font-size:12px;margin-bottom:-8px;">
                        User ID
                     </p>
                     <p style="margin:0;font-size:25px;"> 
                        {{userContext.userinfo.sub}}
                     </p>
                  </div>
               </div>
               <div class="row">
                  <div class="col-3">
                     <img src="https://cdn.glitch.com/bb25f7a0-0f2b-4f20-bdb3-8c401691d212%2Fshield.png?1552443369398" style="width:100%;" />
                  </div>
                  <div class="col-9">
                     <p style="margin:0;padding-top:15px;font-size:12px;margin-bottom:-8px;">
                        Locale
                     </p>
                     <p style="margin:0;font-size:25px;"> 
                        {{userContext.userinfo.locale}}
                     </p>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
<div class="container" style="margin-top:50px;" >
  <div class="row">
      <div class="col-12" >
          <form method="post">
            {{#each fields}}
              <div class="form-group">
                <label>{{this.label}}</label>
                <input

                  name="{{this.name}}"
                  type="{{this.type}}"
                  class="form-control {{#if this.error}}is-invalid{{/if}}"
                  value="{{this.value}}"
                />
                <div class="invalid-feedback">{{this.error}}</div>
              </div>
            {{/each}}
            <button type="submit" class="btn btn-primary">check my balance</button>
          </form>
        <br /><br /><br /><br /><br /><br />
      </div>
  </div>
</div>
{{#if payload}}
  <div class="container" style="margin-top:50px;" >
  <div class="row">
      <div class="col-12" style="background:#ffd342;color:#00559c;word-wrap:break-word;">
          <h1 class="text-center">
            Step-up ID Token
        </h1>
      </div>
  </div>
</div>
<div style="background:#eee;">
  <div class="container" style="background:white;border:solid 1px ;margin-top:25px;margin-bottom:300px;">
      <div class="col-12" style="color:#000;word-wrap:break-word;padding-top:25px;">
            <textarea id="idTokenText" style="width:100%;min-height:500px;border:none;">
                {{payload}}
        </textarea>
        <script>
          var obj = JSON.parse(document.getElementById('idTokenText').value);
          var pretty = JSON.stringify(obj, undefined, 4);
          document.getElementById('idTokenText').value = pretty;
        </script>
        </div>
    </div>
  </div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <script>
    setTimeout(
    function() {
    $('#payModal').modal('show');
    }, 2000);
 
</script>

<div class="modal fade" id="payModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="alertModalLabel">You are up to date!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <button type="submit" data-dismiss="modal" class="btn btn-primary">Your next payment of $239.34 is due next month.</button>
      </div>
    </div>
  </div>
</div>
  {{/if}}
{{else}}
<div id="maindiv">
   <div id="header">
   </div>
   <div id="seconddiv">
   </div>
</div>
{{/if}}